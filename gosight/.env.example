# ===========================================
# GoSight Environment Variables
# ===========================================
# Copy this file to .env and update values

# ===========================================
# ClickHouse (Analytics Database)
# ===========================================
CLICKHOUSE_DB=gosight
CLICKHOUSE_USER=gosight
CLICKHOUSE_PASSWORD=gosight_pass
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123

# ===========================================
# PostgreSQL (Metadata Database)
# ===========================================
POSTGRES_DB=gosight
POSTGRES_USER=gosight
POSTGRES_PASSWORD=gosight_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ===========================================
# Redis (Cache)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Kafka (Message Queue)
# ===========================================
KAFKA_BROKERS=localhost:9094
KAFKA_TOPIC_EVENTS=gosight.events
KAFKA_TOPIC_REPLAY=gosight.replay
KAFKA_CONSUMER_GROUP=gosight-processor

# ===========================================
# Ingestor Service
# ===========================================
INGESTOR_GRPC_PORT=50051
INGESTOR_HTTP_PORT=8081

# ===========================================
# API Service
# ===========================================
API_PORT=8082
API_JWT_SECRET=change-me-in-production

# ===========================================
# Environment
# ===========================================
ENV=development
LOG_LEVEL=debug
